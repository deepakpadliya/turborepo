{
  "name": "@repo/ui",
  "version": "0.0.0",
  "private": true,
  "main": "./dist/cjs/index.js",
  "module": "./dist/esm/index.js",
  "types": "./dist/types/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/esm/index.js",
      "require": "./dist/cjs/index.js",
      "types": "./dist/types/index.d.ts"
    },
    "./*": {
      "import": "./dist/esm/*.js",
      "require": "./dist/cjs/*.js",
      "types": "./dist/types/*.d.ts"
    }
  },
  "scripts": {
    "build": "npm run build:clean && npm run build:esm && npm run build:cjs && npm run build:types && npm run setup-modules",
    "build:clean": "rm -rf dist",
    "build:esm": "tsc -p tsconfig.esm.json && npm run copy-styles:esm",
    "build:cjs": "tsc -p tsconfig.cjs.json && npm run copy-styles:cjs",
    "build:types": "tsc -p tsconfig.types.json",
    "copy-styles:esm": "find src -name '*.scss' -exec cp {} dist/esm/ \\;",
    "copy-styles:cjs": "find src -name '*.scss' -exec cp {} dist/cjs/ \\;",
    "setup-modules": "echo '{\"type\":\"module\"}' > dist/esm/package.json && echo '{\"type\":\"commonjs\"}' > dist/cjs/package.json",
    "dev": "npm run build:types -- --watch",
    "lint": "eslint . --max-warnings 0",
    "generate:component": "turbo gen react-component",
    "check-types": "tsc --noEmit"
  },
  "devDependencies": {
    "@repo/eslint-config": "workspace:*",
    "@turbo/gen": "^2.5.0",
    "eslint": "^9.26.0"
  },
  "dependencies": {
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "typescript": "5.8.2",
    "@repo/typescript-config": "workspace:*",
    "@types/node": "^22.15.3",
    "@types/react": "19.1.0",
    "@types/react-dom": "19.1.1"
  }
}
